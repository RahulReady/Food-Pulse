{
  "manifest_version": 2,

  "name": "Food Pulse",
  "version": "2.1",
  "description": "Gets information from Google Reviews.",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://fonts.googleapis.com/; object-src 'self'",

  "permissions": [
    "activeTab",
    "tabs",
    "https://*.google.com/*",
    "https://*.googleapis.com/*"
  ]
}
